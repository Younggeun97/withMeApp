<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/userimage"
        android:layout_width="38dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="9dp" />

    <TextView
        android:id="@+id/userid"
        android:layout_width="67dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="start"
        android:text="userid"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="21dp" />

    <TextView
        android:id="@+id/away"
        android:layout_width="33dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="35dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/away"
        app:layout_constraintEnd_toStartOf="@+id/comma1"
        app:layout_constraintStart_toEndOf="@+id/userid"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="21dp" />

    <TextView
        android:id="@+id/distance"
        android:layout_width="28dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/running_distance"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="21dp" />

    <TextView
        android:id="@+id/comma1"
        android:layout_width="3dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/comma"
        app:layout_constraintEnd_toStartOf="@+id/startLoc"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="21dp" />

    <TextView
        android:id="@+id/startLoc"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/start_location"
        app:layout_constraintEnd_toStartOf="@+id/comma2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="21dp" />

    <TextView
        android:id="@+id/comma2"
        android:layout_width="3dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/comma"
        app:layout_constraintEnd_toStartOf="@+id/distance"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="21dp" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="35dp"
        android:layout_height="51dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:id="@+id/btn_heart"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:backgroundTint="#00FFFFFF"
            app:srcCompat="@drawable/localheart"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        <EditText
            android:id="@+id/heartnum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>